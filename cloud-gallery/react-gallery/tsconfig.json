{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ES2020",
		"lib": ["es2020", "DOM"],
		"paths": {
			"~/*": ["./src/*"]
		},
		"jsx": "react",
		"strict": true,
		"declaration": true,
		"declarationDir": "lib/types",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"incremental": true,
		"isolatedModules": true,
		"types": [
			"@cloudflare/workers-types"
		]
	},
	"include": ["src", "../constants.ts"]
}
